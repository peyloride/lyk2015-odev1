<h2> Yeni Kullanıcı </h2>
<%= form_for :user, url: users_path do |f| %>

    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
            <%= msg %><br/>
        <% end  %>
    <% end %>

    <%= f.label :username %>
    <%= f.text_field :username %>
    <br/>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br/>
    <%= f.label :age %>
    <%= f.text_field  :age %>
    <br/>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <br/>
    <%= f.submit %>
<% end %>